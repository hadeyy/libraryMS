<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <h4>
                <span class="all-caps">"{{ book.title }}"</span> by
                <span class="capital">{{ book.author }}</span>
            </h4>
            <hr>
            <h5>Are you sure you wan to remove this book from the database?</h5>
            <small>*This action cannot be undone.</small>
            <hr>
            <button type="button" class="btn btn-secondary remove-validation-btn" data-dismiss="modal">
                Cancel
            </button>
            <a href="{{ path('delete-book', {id: book.id}) }}">
                <button type="button" class="btn btn-danger remove-validation-btn">REMOVE</button>
            </a>
        </div>
    </div>
</div>
